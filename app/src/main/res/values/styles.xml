<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="my_edittext_style">
        <item name="android:background">@drawable/bg_edittext</item>
    </style>

    <style name="RadioButtonBottomTab">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:button">@null</item>
        <item name="android:textColor">@drawable/txtcolor_gray2oran_sel</item>
        <item name="android:textSize">13dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/buttonstyle</item>
    </style>

    <style name="TextViewTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/txt_gray</item>
        <item name="android:textSize">@dimen/txtsize_title</item>
    </style>

</resources>
